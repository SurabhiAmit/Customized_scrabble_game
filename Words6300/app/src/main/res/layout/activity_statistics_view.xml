<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatisticsViewActivity">

    <Button
        android:id="@+id/LetterStats"
        android:layout_width="233dp"
        android:layout_height="80dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="32dp"
        android:onClick="LetterSta"
        android:text="Letter Stats"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ScoreStats" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="109dp"
        android:layout_height="66dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/singlescrabbler" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="60dp"
        android:layout_height="61dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/instructions_icon" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="33dp"
        android:text="Statistics"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="205dp"
        android:layout_height="55dp"
        android:layout_marginStart="103dp"
        android:layout_marginTop="20dp"
        android:text="Best Score:"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />

    <TextView
        android:id="@+id/BestScore"
        android:layout_width="189dp"
        android:layout_height="69dp"
        android:layout_marginStart="111dp"
        android:layout_marginTop="12dp"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/ScoreStats"
        android:layout_width="231dp"
        android:layout_height="80dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="42dp"
        android:onClick="ScoreSta"
        android:text="Score Stats"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BestScore" />

    <Button
        android:id="@+id/wordbank"
        android:layout_width="233dp"
        android:layout_height="80dp"
        android:layout_marginStart="93dp"
        android:layout_marginTop="32dp"
        android:onClick="WordBankSta"
        android:text="Word Bank"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LetterStats" />

</android.support.constraint.ConstraintLayout>